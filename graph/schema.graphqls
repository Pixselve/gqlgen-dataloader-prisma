# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Post {
    id:        String
    title:     String
    author: User
    authorUsername: String
}
type User {
    username: String!
    posts: [Post!]!
}
type Query {
    users: [User!]!
    posts: [Post!]!
}
type Mutation {
    createOnePost(authorUsername: String!, title: String!): Post!
    createOneUser(username: String!): User!
}